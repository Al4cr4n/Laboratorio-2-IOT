<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <!-- AppBar simulada -->

    <!-- Espaciado -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:gravity="center"
        android:padding="12dp"
        android:text="APPSIoT - Lab 2"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <!-- Título -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Ícono -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/satelite"
        android:contentDescription="Ícono satélite"
        android:layout_marginBottom="24dp" />

    <!-- Botón Software -->
    <Button
        android:id="@+id/btnSoftware"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Software"
        android:layout_marginBottom="12dp" />

    <!-- Botón Ciberseguridad -->
    <Button
        android:id="@+id/btnCiberseguridad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ciberseguridad"
        android:layout_marginBottom="12dp" />

    <!-- Botón Ópticas -->
    <Button
        android:id="@+id/btnOpticas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Ópticas" />

</LinearLayout>
